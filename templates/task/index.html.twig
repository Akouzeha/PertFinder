{% extends 'base.html.twig' %}

{% block title %}Hello TaskController!{% endblock %}

{% block body %}
{% set sommeDuree = 0 %}
{% set sommeVariance = 0 %}

<div class="task-form-container">
    <div class="task-form">
        <div style="color:red;">{{form_errors(formTask)}}</div>
        {{form_start(formTask)}}
            <h2> Ajoutez des tâches </h2>
            <div class="col-6">
                <div class="form-row">
                    {{form_label(formTask.name)}}
                    {{form_widget(formTask.name)}}
                </div>
                <div class="form-row">
                    {{form_label(formTask.optTime)}}
                    {{form_widget(formTask.optTime)}}
                    
                </div>
            </div>
            <div class="col-6">
                <div class="form-row">
                    {{form_label(formTask.pesTime)}}
                    {{form_widget(formTask.pesTime)}}
                </div>
                <div class="form-row">
                    {{form_label(formTask.mosTime)}}
                    {{form_widget(formTask.mosTime)}}
                </div>
            </div>
            <p> tous les temps sont en jours </p>
            <p>{{form_errors(formTask.name)}}
                    {{form_errors(formTask.optTime)}}
                    {{form_errors(formTask.pesTime)}}
                    {{form_errors(formTask.mosTime)}}
                </p>
            
            
            <div class="col-12">
                <button type="submit" class="btn">
                Créer
                </button>
            </div>
        {{form_end(formTask)}}
    </div>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}
</div>
            
            <div class="task-list col-12">
                {% if tasks | length == 0 %}
                    <h2> Aucune tâche n'a été ajoutée </h2>
                {% else %}
                    <h2> Liste des tâches </h2>
                <table class="task-table">
                    <thead>
                        <tr>
                            <th colspan="6">Les Données</th>
                        </tr>
                        <tr>
                            <th scope="col">Nom</th>
                            <th scope="col">Temps optimiste</th>
                            <th scope="col">Temps probable</th>
                            <th scope="col">Temps pessimiste</th>
                            <th scope="col"></th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for task in tasks %}
                            <tr>
                                <td>{{task.name}}</td>
                                <td>{{task.optTime}}</td>
                                <td>{{task.pesTime}}</td>
                                <td>{{task.mosTime}}</td>
                                <td></td>
                                <td>
                                    <a href="{{path('edit_task',{'id': task.id, 'chartId': task.pertChart.id })}}"><img class="edit-pen" src="{{ asset('img/pencil-fill.svg') }}"></a>
                                    <a href="{{path('delete_task', {'id': task.id})}}"><img class="delete-bin" src="{{ asset('img/delete-bin.svg') }}"></a>
                                </td>
                            </tr>
                        {% endfor %}
                        <tr>
                            <th  colspan="6">{{tasks|length}}
                                {% if tasks|length > 1 %}
                                    tâches ont été ajoutées
                                {% else %}
                                    tâche a été ajoutée
                                {% endif %}
                             </th>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="task-list col-12">
                <div class="col-6">
                    <table class="task-table">
                        <thead>
                            <tr>
                                <th>La Tâche</th>
                                <th> Les Successeurs </th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for task in tasks %}
                                <tr>
                                    <td>{{task.name}}</td>
                                    <td>
                                        à venir
                                    </td>
                                </tr>
                            {% endfor %}
                            <tr>
                                <th colspan="2"> Dépendance</th>
                            <tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-6">
                    <table class="task-table">
                        <thead>
                            <tr>
                                <th>La Tâche</th>
                                <th>La Durée </th>
                                <th>La Variance </th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for task in tasks %}
                                {% set sommeDuree = sommeDuree + task.duree %}
                                {% set sommeVariance = sommeVariance + task.variance %}
                                <tr>
                                    <td>{{task.name}}</td>
                                    <td>
                                        {{task.duree}}
                                    </td>
                                    <td>
                                        {{task.variance}}
                                    </td>
                                </tr>
                            {% endfor %}
                            <tr>
                                <th> Somme </th>
                                <th> {{sommeDuree}} </th>
                                <th> {{sommeVariance}} </th>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            

            {% endif %}

{% endblock %}
