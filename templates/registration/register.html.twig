{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        <div class="form-group">
            <h2>Inscription</h2>
            
                
                {{ form_widget(registrationForm.username, { 'attr': {'class': 'form-input'} }) }}

                {{ form_widget(registrationForm.nom, { 'attr': {'class': 'form-input'} }) }}

                {{ form_widget(registrationForm.prenom, { 'attr': {'class': 'form-input'} }) }}

                {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-input'} }) }}

                {{ form_widget(registrationForm.plainPassword.first, { 'attr': {'class': 'form-input'} }) }}

                {{ form_widget(registrationForm.plainPassword.second, { 'attr': {'class': 'form-input'} }) }}
                {{ form_row(registrationForm.agreeTerms) }} <a href="">Conditions générales d'utilisation</a>


                <button type="submit" class="btn">S'inscrire</button>
            
        </div>
    {{ form_end(registrationForm) }}
{% endblock %}
